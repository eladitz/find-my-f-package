<%= simple_form_for @address, html: {:"data-controller" => 'form'} do |f| %>
  <%= f.input :country, as: :string, input_html: { "data-action": "keyup->form#country", "data-form-country-target": "input"} %>
  <%= f.input :city, input_html: { "data-action": "keyup->form#city" } %>
  <%= f.input :post_code, input_html: { "data-action": "keyup->form#post_code" } %>
  <%= f.input :street, input_html: { "data-action": "keyup->form#street" } %>
  <%= f.input :house_number, input_html: { "data-action": "keyup->form#house_number" } %>
  <%= f.button :submit, class: 'btn-primary'  %>
<% end %>
