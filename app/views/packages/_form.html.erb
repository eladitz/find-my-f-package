<div class="container">
    <%= form_with url: received_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Please enter full name as written on the package"
      %>

      <%= submit_tag "Submit", class: "btn btn-primary btn-submit btn-lg" %>
    <% end %>
</div>
