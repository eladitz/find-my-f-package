<div class="d-flex justify-content-center h-100 ">
  <div class="container-fluid">
    <div class="row g-2 justify-content-center">
      <div class="col-lg-6 col-md-11">
        <div class="p-3">
          <%= link_to t("find_my_f_package"), profile_path, class: "btn btn-primary btn-lg col-12 p-3" %>
        </div>
      </div>
    </div>
    <div class="row g-2 justify-content-center">
      <div class="col-lg-6 col-md-11">
        <div class="p-3">
          <%= link_to t("i_recieved_a_f_package"), received_path, class: "btn btn-primary btn-lg col-12 p-3" %>
        </div>
      </div>
    </div>
    <% if !user_signed_in? %>
    <div class="row g-2 justify-content-center">
      <div class="col-lg-6 col-md-11">
        <div class="row g-2 justify-content-center">
          <%= link_to t("login_register"), new_user_registration_path, class: "btn btn-primary btn-lg col-8 col-4" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
