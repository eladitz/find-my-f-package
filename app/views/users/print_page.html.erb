<div class="container print_page">
  <h1>Dear <strong>
  <% if @package.not_register_user_name %><br><br>
    <%= @package.not_register_user_name %>
  <% else %>
    <%= @package_owner.first_name.capitalize %> <%= @package_owner.last_name.capitalize %>
  <% end %>
  </strong></h1>
  <br><br>
  <p><%= t("i_have_received_a_for_you") %></p>
  <br>
  <div class="flex-d">
    <% if @package.availability %>
      <% @package.availability.split(";").each do |a| %>
        <% arr = a.split("|") %>
        <% if arr[1] == "true" %>
          <div class="col-2"><strong><%= arr[0] %></strong><br>
            <%= arr[2] %>-<%= arr[3] %></div>
          <br>
        <% end %>
      <% end %>
    <% end %>
    <% if @package.comment %><br><br>
      <p><%= t("Comment") %><br>
      <%= @package.comment %></p><br><br>
    <% end %>
  </div>
  <h2><%= t("kind_regards") %> <br><strong><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></strong></h2><br><br>
  <div><%= t("you_can_also_find") %><br><strong>www.findyourfpackage.com</strong></div><br><br>

  <img src="https://res.cloudinary.com/divxkz0vc/image/upload/v1662478332/findmyfpackage_kn0gke.png" style="float:right; width:200px; margin-top:-305px;">
  <a href="#" onclick="window.print();return false;" ><%= t("click_here_to_print") %></a>

  <%= link_to "Go back to profile", profile_path, class: "btn btn-primary btn-lg col-12 p-3" %>

</div>
